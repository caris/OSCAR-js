	<profiles>
		<profile>
			<id>production</id>
			<build>
				<plugins>
					<plugin>
						<groupId>net.alchim31.maven</groupId>
						<artifactId>yuicompressor-maven-plugin</artifactId>
						<configuration>
							<excludes>
								<exclude>**/*.pack.js</exclude>
								<exclude>**/*-min.js</exclude>
								<exclude>**/compressed.css</exclude>
								<exclude>**/*.gif</exclude>
								<exclude>**/*.png</exclude>
								<exclude>**/examples/**/*.*</exclude>
							</excludes>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>compress</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>naturaldocs</id>
